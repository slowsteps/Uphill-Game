package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;			public class GameLoader extends MovieClip {				public var mymain:Main;		public var myintro:Intro;		public var skipintro:Boolean=false;		public var gameoverScreen:GameoverScreen		public var shop:Shop								public function GameLoader() {						if (skipintro) reset();			else {				showIntro();			}					createScreens()				}				private function onStart(e:Event) {						if (myintro) removeChild(myintro);			stage.removeEventListener(KeyboardEvent.KEY_DOWN,onStart)			reset();				}		private function onMoreGames(e:Event) {			trace("load url")		}		public function showIntro() {			myintro = new Intro();			addChild(myintro);			myintro.startbutton.addEventListener(MouseEvent.CLICK,onStart);			stage.addEventListener(KeyboardEvent.KEY_DOWN,onStart)			myintro.moregamesbutton.addEventListener(MouseEvent.CLICK,onMoreGames);		}						public function reset() {			if (mymain!=null) {				this.removeChild(mymain);			}			mymain= new Main(this);						addChild(mymain);			this.setChildIndex(mymain,0)					}		private function createScreens() {			shop = new Shop(this) 			addChild(shop)			shop.visible = true						gameoverScreen = new GameoverScreen(this)			addChild(gameoverScreen)			gameoverScreen.visible = false								}	}		}