package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;		public class GameoverScreen extends MovieClip {		private var myLoader:GameLoader				public function GameoverScreen(inLoader:GameLoader) {			myLoader = inLoader						x = 200			y = (height + myLoader.stage.fullScreenHeight)/2			continuebutton.addEventListener(MouseEvent.CLICK,onContinue)		}		public function show(inreason:String) {			this.textfield.text = inreason			this.rewardtextfield.text = "Distance bonus $" + Gamestate.coins			visible = true		}		private function onContinue(e:Event) {			visible = false			myLoader.shop.show()		}	}	}