package  {		import flash.display.MovieClip	import flash.utils.Timer	import flash.events.TimerEvent	import flash.geom.Point	import com.greensock.TweenMax;	import com.greensock.*;	import com.greensock.easing.*;			import flash.events.Event;	public class TextBalloon extends MovieClip {		private var hideTimer:Timer		private var spawn:MovieClip		private var myMain:Main		private var myPoint:Point		private var savedScaleX:Number		private var savedScaleY:Number				public function TextBalloon(inMain:Main=null,inSpawn:MovieClip=null) {			myMain = inMain			spawn = inSpawn			if (myMain) myMain.addChild(this)			myPoint = new Point()			visible = false			hideTimer = new Timer(1500,0)			hideTimer.addEventListener(TimerEvent.TIMER,hide)			savedScaleX = scaleX			savedScaleY = scaleY		}		public function show(inText:String) {			scaleX = savedScaleX			scaleY = savedScaleY			alpha = 1			visible = true			textfield.text = inText			hideTimer.start()			this.addEventListener(Event.ENTER_FRAME,onEnterFrame)			TweenMax.from(this, 0.5, {scaleX:0,scaleY:0,ease:Elastic.easeOut});		}				private function onEnterFrame(e:Event) {						myPoint.x = spawn.x;			myPoint.y = spawn.y - spawn.height/2 - height/2;			myPoint = spawn.parent.localToGlobal(myPoint);						if (myPoint.x<(800-width/2)) x = myPoint.x			if (myPoint.y>(0+height)) y = myPoint.y			else y = myPoint.y + height					}						public function hide(e:Event) {			TweenMax.to(this, 0.5, {alpha:0,onComplete:onHideCompleted});						this.removeEventListener(Event.ENTER_FRAME,onEnterFrame)			hideTimer.reset();		}		private function onHideCompleted() {			visible = false		}	}	}